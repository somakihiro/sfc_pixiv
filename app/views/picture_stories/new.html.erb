<%= form_for(@picture_story) do |f| %>
  <div class="content-wrapper">
    <%= f.text_field :title, class: 'title-fields' %>
    <%= f.fields_for :picture_story_orders do |order, index| %>
      <%= render 'picture_stories/picture_story_order_fields', f: order %>
    <% end %>
    <div class="field">
      <%= link_to_add_association '話を追加', f, :picture_story_orders %>
    </div>
    <%= f.submit '投稿' %>
  </div>
<% end %>
